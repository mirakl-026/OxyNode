@model OxyNode.ViewModels.NotesViewModel

@{
    Layout = "_LayoutNotes";
    ViewData["Title"] = "OxyNode | Notes | Page " + Model.currentPageNumber;
}

<hr />
<div>
    @foreach (var note in Model.notes)
    {
        <p>
            <a asp-controller="Notes" asp-action="ReadNote" asp-route-id="@note.Id">@note.note_NoteName</a>
            <div>
                @note.note_ShortDescription
            </div>
            <br />
        </p>
    }

</div>

<div>
    Страница статей: @Model.currentPageNumber
</div>
<div>
    Всего статей: @Model.notesCount
</div>