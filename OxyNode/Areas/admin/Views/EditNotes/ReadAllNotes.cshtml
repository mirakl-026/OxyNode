@model OxyNode.ViewModels.NotesViewModel

@{
    ViewData["Title"] = "Admin | Notes | Read all";
}

<h3>Все статьи</h3>
<hr />

<div>
    @foreach (var note in Model.notes)
    {
        <p>
            <a asp-area="admin" asp-controller="EditNotes" asp-action="ReadNote" asp-route-id="@note.Id">@note.note_NoteName</a>
            <div>
                @note.note_ShortDescription
            </div>
            <a asp-area="admin" asp-controller="EditNotes" asp-action="UpdateNote" asp-route-id="@note.Id">Редактировать статью</a>
            <a asp-area="admin" asp-controller="EditNotes" asp-action="DeleteNote" asp-route-id="@note.Id">Удалить статью</a>
            <br />
        </p>
    }

</div>

<div>
    Страница статей: @Model.currentPageNumber
</div>
<div>
    Всего статей: @Model.notesCount
</div>


