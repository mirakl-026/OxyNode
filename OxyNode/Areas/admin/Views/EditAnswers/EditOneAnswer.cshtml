@model OxyNode.Models.KB_answer
@using System.Web;

@{
    ViewData["Title"] = "Admin | QA | Edit one answer";
}

<h4> Редактирование ответа на вопрос</h4>
<hr />

<div>
    <div>Id вопроса: @Model.QuestionId</div>
</div>


<form asp-area="admin" asp-controller="EditAnswers" asp-action="EditOneAnswer" method="post">
    <div>
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="hidden" asp-for="QuestionId" value="@Model.QuestionId" />
                <input type="hidden" asp-for="publishToSite" value="@Model.publishToSite" />

                <table>
                    <tr>
                        <td><label asp-for="answerText" class="control-label"></label></td>
                        <td><textarea asp-for="answerText" class="form-control" value="@Model.answerText"></textarea><span asp-validation-for="answerText" class="text-danger"></span></td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" />
            </div>
        </div>
    </div>
</form>