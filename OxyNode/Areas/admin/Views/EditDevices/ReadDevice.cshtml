@model OxyNode.Models.Device
@{
    ViewData["Title"] = "Admin | Device";
}

<h4>Информация о приборе</h4>
<hr />
<table>
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td><label asp-for="Name" class="control-label"></label></td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td><label asp-for="Manufacturer" class="control-label"></label></td>
        <td>@Model.Manufacturer</td>
    </tr>
    <tr>
        <td><label asp-for="DeliveryTime" class="control-label"></label></td>
        <td>@Model.DeliveryTime</td>
    </tr>
    <tr>
        <td><label asp-for="Type" class="control-label"></label></td>
        <td>@Model.Type</td>
    </tr>
    <tr>
        <td><label asp-for="ScopeOfApplication" class="control-label"></label></td>
        <td>@Model.ScopeOfApplication</td>
    </tr>
    <tr>
        <td><label asp-for="Price" class="control-label"></label></td>
        <td>@Model.Price</td>
    </tr>
</table>


<h4>Описание прибора</h4>
<hr />
<div>
    @Html.Raw(Model.DescriptionHTML5)
</div>

<a asp-area="admin" asp-controller="EditDevices" asp-action="UpdateDevice" asp-route-id="@Model.Id">Изменить</a>
<a asp-area="admin" asp-controller="EditDevices" asp-action="DeleteDevice" asp-route-id="@Model.Id">Удалить</a>
